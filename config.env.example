# Configuration File for SecureWipe Platform
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
FLASK_ENV=development

# Database Configuration
DATABASE_URI=sqlite:///secure_wipe.db

# Email Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=diziavatar@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here

# Admin Configuration
ADMIN_EMAIL=diziavatar@gmail.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# File Upload Configuration
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=uploads

# Payment Configuration (for future integration)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# SMS Configuration (optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Application Settings
APP_NAME=SecureWipe
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=5000

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_PDF_REPORTS=True
ENABLE_ML_PREDICTIONS=True

# Pricing Configuration (USD)
PRICE_QUICK_WIPE=5.99
PRICE_SECURE_WIPE=9.99
PRICE_MILITARY_WIPE=14.99
PRICE_CUSTOM_WIPE=19.99

# ML Model Configuration
ML_MODEL_PATH=ml_models/wipe_predictor.pkl
ML_TRAINING_DATA_MIN_SAMPLES=100

# Rate Limiting
RATE_LIMIT_WIPE_PER_HOUR=10
RATE_LIMIT_LOGIN_ATTEMPTS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/securewipe.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
